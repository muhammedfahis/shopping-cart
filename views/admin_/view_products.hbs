<section>
    <div class="container">
        <div>
            <div class="row mt-5">
                <a href="/admin/add_product" class="btn btn-success ml-auto"> add product</a>
            </div>
        </div>
        <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Title</th>
      <th scope="col">category</th>
      <th scope="col">description</th>
      <th>Image</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.description}}</td>
      <td><img style="width: 50px;height: 50px;" src="/product-images/{{this._id}}.jpg" alt=""></td>
      <td><a href="/admin/edit_product/{{this._id}}" class="btn btn-warning">Edit</a></td>
      <td><a href="/admin/delete_product/{{this._id}}" onclick="return confirm('Do you want to delete it?')" class="btn btn-danger">Delete</a></td>
    </tr>
   {{/each}}
  </tbody>
</table>
    </div>
</section>